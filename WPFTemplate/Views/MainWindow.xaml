<Window x:Class="WPFTemplate.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTemplate.Views"
        mc:Ignorable="d"
        Title="Hello World" Height="450" Width="800">
    
    <StackPanel VerticalAlignment="Center">
        <Button 
            x:Name="HelloWorldBtn"
            Content="Hello World"
            Style="{StaticResource S_ExampleButton}"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Command="{Binding HelloWorldCommand}"/>
    </StackPanel>
    
</Window>
